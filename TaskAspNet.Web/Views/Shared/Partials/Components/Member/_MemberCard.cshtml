<div class="card">
    <span class="dotes" onclick="toggleMenu(@Model.Id)">••</span>

    <div id="overlay-@Model.Id" class="overlay-menu">
        <ul>
            <li class="menu-option">
                <a href="javascript:void(0);" onclick="openEditModal(@Model.Id)">
                    Edit
                </a>
            </li>
            <li class="menu-option">
                <form asp-action="Delete"
                      asp-controller="Member"
                      method="post"
                      style="display:inline;"
                      onsubmit="return confirm('Are you sure you want to delete this member?');">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit">
                        Delete Member
                    </button>
                </form>
            </li>
        </ul>
    </div>

    <div class="card-header">
        <img src="@Model.ImageData.CurrentImage" alt="Member Logo" />
        <div class="title">
            <h4>@Model.FirstName @Model.LastName</h4>
        </div>
        <div class="card-title">
            <p>@Model.JobTitle.Title</p>
        </div>
        <div class="card-paragraph">
            <p>@Model.Email</p>
            <p>@Model.Phone</p>
        </div>
        <div class="card-footer">
            <p>Message</p>
        </div>
    </div>

    
    <div id="editMemberModal-@Model.Id" class="upload-modal-overlay" style="display: none;">
        <div class="upload-modal-content">
            <span class="close-modal">&times;</span>
            <div id="editMemberContainer-@Model.Id">
                
            </div>
        </div>
    </div>
</div>



@section Styles {
    <link rel="stylesheet" href="~/css/member/MemberCard.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/member/MemberCardMenu.js" asp-append-version="true"></script>
}

